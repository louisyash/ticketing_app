<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @event.photo_url %>);">
  <div class="container">
    <h1><%= @event.artist %></h1>
    <p><%= @event.name %></p>
    <%= link_to "チケット購入", events_path, class:"btn btn-primary w-25" %>
  </div>
</div>
<div class="container d-flex">
  <div class="event-card">
    <p>日程: <%= @event.event_date.strftime("%Y年%m月%d日　開演: %H:%M")  %></p>
    <p>会場: <%= @event.address %></p>
    <p>チケット価格：</p>
  </div>
  <div id="map" class="map-card"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
