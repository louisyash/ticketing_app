  <div class="container">
    <h1><%= @event.user.name %></h1>
    <p><%= @event.name %></p>
    <%= link_to "チケット購入", events_path, class:"btn btn-primary" %>
  </div>
</div>
<div class="container d-flex">
  <div class="event-card">
    <p>日程: <%= @event.event_date %></p>
    <p>会場: <%= @event.address %></p>
    <p>チケット価格：</p>
  </div>
  <div class="event-card">
    MAP
  </div>
</div>
